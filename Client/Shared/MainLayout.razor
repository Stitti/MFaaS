@inherits LayoutComponentBase
@using MFaaS.Shared.Models;

<div class="page">
    <main>
        <div class="top-row px-4">
        </div>

        <article class="content px-4">
            <div>
                <div style="text-align: center">
                    <img width="624" height="320" src="https://github.com/Stitti/MFaaS/blob/master/Client/Ressources/modern-family-as-a-service.jpg?raw=true" alt="Image"/>
                </div>
                <div>
                  <blockquote style="text-align:center;">
                    <p style="font-size:20px;">"@_Quotation?.Quote"</p>
                    <cite style="font-size:14px">@_Quotation?.Actor</cite>
                  </blockquote>
                </div>
            </div>
            <div style="background:url() no-repeat; width:40px; height:40px;">
                <span class="icon"></span>
                <a href="#">Crimson</a>
                <span></span>
                </div>

        </article>
    </main>
</div>

@code {
    private HttpClient _HttpClient = new HttpClient();
    private Quotation _Quotation;
    private string _ImagePath;

    protected override async Task OnInitializedAsync()
    {
        _HttpClient.BaseAddress = new Uri("https://localhost:7098");
        _Quotation = await _HttpClient.GetFromJsonAsync<Quotation>("/api/quotes/random");
    }
}

